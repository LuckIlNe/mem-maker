<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t("devise.email")%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="mb-6">
      <%= f.label :nickname, t("devise.nickname"), class:"label" %><br />
      <%= f.text_field :nickname, autofocus: true, class:"input" %>
    </div>

  <div class="field">
    <%= f.label :password, t("devise.password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("devise.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.sign-up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
