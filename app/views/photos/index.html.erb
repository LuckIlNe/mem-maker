<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= image_tag photo.thumb %></td>
        <td><%= link_to 'Show', photo %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<% @photos.each do |photo| %>
    <%= link_to image_tag(photo.thumb), photo %>
<% end %>

<br>

<%= link_to 'New Photo', new_photo_path %>
