<p id="notice"><%= notice %></p>

<h1><%= t(:photos) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:title) %></th>
      <th><%= t(:photo) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= image_tag photo.thumb %></td>
        <td><%= link_to t(:show), photo %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<% @photos.each do |photo| %>
    <%= link_to image_tag(photo.thumb), photo %>
<% end %>

<br>

<%= link_to t(:new_photo), new_photo_path %>
